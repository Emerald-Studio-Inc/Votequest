# Frontend Environment Variables

# Public RPC URLs (safe to expose in frontend)
NEXT_PUBLIC_POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Production URL (replace with your actual Netlify URL)
NEXT_PUBLIC_APP_URL=https://your-votequest-app.netlify.app

# Cloudflare Turnstile (Captcha)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Admin Access (SECURITY: Set to false in production!)
NEXT_PUBLIC_ENABLE_ADMIN_BACKDOOR=false

# Admin Security Settings
NEXT_PUBLIC_ADMIN_PASSPHRASE=your-super-secret-passphrase-here
ADMIN_IP_WHITELIST=127.0.0.1,your.actual.ip.address

